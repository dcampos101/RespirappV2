<p id="notice"><%= notice %></p>

<h1>Reportes</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Nivel de Contaminación</th>
      <th>Tipo de Reporte</th>
      <th>Ubicacion latitud</th>
      <th>Ubicacion longitud</th>
      <th>Imagen</th>
      <th>Observación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.user.email %></td>
        <td><%= report.contamination_level.nombre %></td>
        <td><%= report.report_type.nombre %></td>
        <td><%= report.ubicacion_lat %></td>
        <td><%= report.ubicacion_long %></td>
        <td><%= report.imagen %></td>
        <td><%= report.observacion %></td>
        <td><%= link_to 'Ver', report %></td>
        <td><%= link_to 'Editar', edit_report_path(report) %></td>
        <td><%= link_to 'Eliminar', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Reporte', new_report_path %>
