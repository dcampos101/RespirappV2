<p id="notice"><%= notice %></p>

<h1>Tipos de Reportes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_types.each do |report_type| %>
      <tr>
        <td><%= report_type.nombre %></td>
        <td><%= report_type.estado %></td>
        <td><%= link_to 'Ver', report_type %></td>
        <td><%= link_to 'Editar', edit_report_type_path(report_type) %></td>
        <td><%= link_to 'Eliminar', report_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Tipo de Reporte', new_report_type_path %>
